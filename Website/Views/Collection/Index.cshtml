@model IEnumerable<Opuno.Brenn.Models.Collection>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            DisplayName
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CollectionId }) |
            @Html.ActionLink("Details", "Details", new { id = item.CollectionId }) |
            @Html.ActionLink("Expenses", "Index", "Expense", new { collectionId = item.CollectionId }, null) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CollectionId })
        </td>
    </tr>
}

</table>
